				<TextBox Name="txtQueryBox" Height="30" VerticalAlignment="Top" Background="#151515" Padding="5" Foreground="White" BorderBrush="#444444" BorderThickness="0,0,0,2" Panel.ZIndex="5" KeyUp="txtQueryBox_KeyUp" MouseDown="txtQueryBox_MouseDown"/>
